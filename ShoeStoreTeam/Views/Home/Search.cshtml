@using ShoeStoreTeam.Models
@model List<Product>
@{
    ViewBag.Title = "Sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div id="latest-product" class="latest-product latest-product-1 container-fluid no-padding woocommerce">
    <!-- Container -->
    <div class="container">
        <!-- Section Header -->
        <div class="section-header">
            <h3>Danh sách sản phẩm</h3>
        </div><!-- Section Header /- -->
        <ul class="products animated lightSpeedIn" style="margin-bottom: 50px;">
            @foreach(var item in Model)
            {
                <li class="product" style="width:25%;">
                    <a href="chi-tiet/@item.Link-@item.Id">
                        <span class="new-product">New</span>
                        <span class="onsale">15%</span>
                        <span class="product-img">
                            <img src="@Url.Content("~/Content/Shopping/images/products/"+@item.Image)" style="height: 300px;width:270px;" alt="product" />
                        </span>
                        <h3>@item.Name</h3>
                        <span class="price"><span class="amount">@item.Price VNĐ</span></span>
                    </a>
                    <p class="hover-content">
                        <a title="Add To Cart" href="@Url.Action("ThemCart", "Cart", new { @magiay = @item.Id, @strURL = Request.Url.ToString() })" class="button product_type_simple add_to_cart_button"><i class="fa fa-shopping-cart" aria-hidden="true"></i>Thêm vào giỏ hàng</a>
                    </p>
                </li>
            }
        </ul>
    </div><!-- Container /- -->
</div><!-- Latest Product 1 /- -->


